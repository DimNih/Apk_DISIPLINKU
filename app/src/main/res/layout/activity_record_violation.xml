<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/cisat" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageProfile"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:background="#FF9800">

        <EditText
            android:id="@+id/inputNIS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NIS"
            android:inputType="text"/>

        <EditText
            android:id="@+id/inputNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama"
            android:inputType="text"/>

        <EditText
            android:id="@+id/inputKelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kelas"
            android:inputType="text"/>

        <EditText
            android:id="@+id/inputJenisKelamin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jenis Kelamin"
            android:inputType="text"/>

        <EditText
            android:id="@+id/inputJenisPelanggaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jenis Pelanggaran"
            android:inputType="text"/>

        <EditText
            android:id="@+id/inputTanggalPelanggaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tanggal Pelanggaran"
            android:inputType="date"/>

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIMPAN"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</RelativeLayout>